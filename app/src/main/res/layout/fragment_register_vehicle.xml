        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_reg_no"
                android:layout_width="@dimen/spinner_width"
                android:layout_height="@dimen/spinner_height"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Reg No"
                android:imeOptions="actionNext"
                android:inputType="textNoSuggestions"
                android:maxLength="13"
                android:maxLines="1"
                android:nextFocusDown="@+id/login"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColorHint="@color/colorAccent" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_yom"
                android:layout_width="@dimen/spinner_width"
                android:layout_height="@dimen/spinner_height"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="Year of Manufacture"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="4"
                android:maxLines="1"
                android:nextFocusDown="@+id/login"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColorHint="@color/colorAccent" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/tv_add_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:drawableEnd="@android:drawable/ic_menu_camera"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:hint="Add photo :"
            android:textAppearance="@android:style/TextAppearance.Medium" />

        <ImageView
            android:id="@+id/iv_preview"
            android:layout_width="@dimen/image_preview_width"
            android:layout_height="@dimen/image_preview_height"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/title_home" />

    </LinearLayout>

